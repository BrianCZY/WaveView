<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--扩散圆颜色-->
    <attr name="wave_color" format="color"/>
    <!--中心圆颜色-->
    <attr name="wave_coreColor" format="color"/>
    <!--中心圆图片-->
    <attr name="wave_coreImage" format="reference"/>
    <!--中心圆半径-->
    <attr name="wave_coreRadius" format="float"/>
    <!--扩散圆宽度,值越小越宽-->
    <attr name="wave_width" format="integer"/>
    <!--最大扩散宽度-->
    <attr name="wave_maxWidth" format="integer"/>
    <!--扩散速度，值越大越快-->
    <attr name="wave_speed" format="integer"/>

    <declare-styleable name="WaveView">
        <attr name="wave_color"/>
        <attr name="wave_coreColor"/>
        <attr name="wave_coreImage"/>
        <attr name="wave_coreRadius"/>
        <attr name="wave_width"/>
        <attr name="wave_maxWidth"/>
        <attr name="wave_speed"/>
    </declare-styleable>

</resources>